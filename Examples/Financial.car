
# Financial Models

@ Currency is expressen like: $12,00
type Currency =
    Sign: String
        | min 1
        | max 25
    Value: Number

type CreditCard =
    Number: String
    ExpirationDate: Date

@ Pay from a debit account
type DirectDebit =
    BankAccountNumber: String

data PaymentMethod =
    | CreditCard
    | DirectDebit