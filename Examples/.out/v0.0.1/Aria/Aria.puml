enum BoughtFrom {
	Racial Package
	Professional Package
	XP
	Gift
	Other

}
abstract "Stat" as Stat {
	Strength 
	Agility 
	Intuition 
	Perception 
	Charisma 
	None 
}
class "Namable" as Namable  {
	Name: String 
	Description: String 
}
class "Buyable" as Buyable  {
	Source: BoughtFrom 
	Stat: Stat 
	Bought: Boolean 
	Skilled: Boolean 
	Professional: Boolean 
	Master: Boolean 
}
BoughtFrom --> Buyable : Source
Stat --> Buyable : Stat
