
@ erd: full
type Human =
    FirstName: Maybe String
        | min 10
        | max 90
    @ Original Description
    LastName: String
        | max 90
    MiddleNames: List String
    DateOfBirth: Date

type Person =
    @ This is an annotation for the FuurstName
    @ The FuurstName comes from the "Human" type
    FuurstName: Human.FirstName
        | min 12
        | other "foo"
    @ Maybe we'd like to add more description to this field...
    pluck Human.LastName
    CallingName: String